<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <Button
        android:id="@+id/addNewFlashcard"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_flashcard"/>

    <!-- text size needs to be set in text view -->
    <TextView
        android:id="@+id/frontOfFlashCardTextView"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/addNewFlashcard"/>

    <Button
        android:id="@+id/answerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/answer"
        android:layout_below="@id/frontOfFlashCardTextView"/>
</RelativeLayout>