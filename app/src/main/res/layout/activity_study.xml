<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/studyActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- This activity will consist of the two study_activity fragments -->


        <RelativeLayout
            android:id="@+id/studyActivityFragmentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/fragment"
                android:layout_width="wrap_content"
                android:layout_height="430dp"
                android:layout_marginTop="15dp"
                android:name="com.example.studysmart.FrontOfFlashCardFragment"
                tools:layout="@layout/study_activity_front_of_flashcard_fragment"
                tools:layout_editor_absoluteX="0dp" />
        </RelativeLayout>
</RelativeLayout>